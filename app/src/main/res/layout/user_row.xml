<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/each_user_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:civ_border_color="@android:color/holo_blue_light" />

    <TextView
        android:id="@+id/each_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/each_user_photo"
        android:layout_toRightOf="@+id/each_user_photo"
        android:text="Name"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_online"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/each_user_name"
        android:layout_marginLeft="-15dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/each_user_photo"
        android:layout_toRightOf="@+id/each_user_photo"
        android:visibility="visible"
        app:civ_border_color="#05df29"
        app:civ_border_width="10dp"
        android:src="@mipmap/ic_launcher"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_offline"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/each_user_name"
        android:layout_marginLeft="-15dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/each_user_photo"
        android:layout_toRightOf="@+id/each_user_photo"
        android:visibility="visible"
        app:civ_border_color="#bfbfbf"
        app:civ_border_width="10dp"
        android:src="@mipmap/ic_launcher"/>












</RelativeLayout>