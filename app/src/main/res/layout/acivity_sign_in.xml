<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity"
    android:background="#E3F2FD">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="283dp"
        android:layout_height="63dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/ImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_log"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/Log_text"
        android:layout_width="159dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/TextView"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.067" />



    <Button
        android:id="@+id/gl_button"
        android:layout_width="319dp"
        android:layout_height="76dp"
        android:layout_marginBottom="324dp"
        android:background="@drawable/rounded_btn_google"
        android:drawableStart="@drawable/ic_google"
        android:paddingStart="40dp"
        android:paddingLeft="10dp"
        android:paddingEnd="40dp"
        android:paddingRight="10dp"
        android:text="@string/Log_in_Google"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Log_text"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/fb_button"
        android:layout_width="319dp"
        android:layout_height="76dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="324dp"
        android:background="@drawable/rounded_btn_fb"
        android:drawableStart="@drawable/facebook"
        android:paddingStart="40dp"
        android:paddingLeft="10dp"
        android:paddingEnd="40dp"
        android:paddingRight="10dp"
        android:text="@string/Log_in_Facebook"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gl_button"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/gh_button"
        android:layout_width="319dp"
        android:layout_height="76dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="324dp"
        android:background="@drawable/rounded_btn_gh"
        android:drawableStart="@drawable/github"
        android:paddingStart="40dp"
        android:paddingLeft="10dp"
        android:paddingEnd="40dp"
        android:paddingRight="10dp"
        android:text="@string/Log_in_GitHub"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fb_button"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:layout_width="319dp"
        android:layout_height="76dp"
        android:layout_margin="40dp"
        android:layout_marginBottom="324dp"
        android:fontFamily="@font/bilbo_swash_caps"
        android:gravity="center"
        android:paddingStart="40dp"
        android:paddingLeft="10dp"
        android:paddingEnd="40dp"
        android:paddingRight="10dp"
        android:text="@string/app_name_"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gh_button"
        app:layout_constraintVertical_bias="0.0" />



</androidx.constraintlayout.widget.ConstraintLayout>